<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.samuel.attendance.model.Staff" table="staff" schema="attendanceapi" >
    	
    		<id name="id" column="staff_staffId">
    			<generator class="increment" />
    		</id>
  		
    		<property name="name" column="staff_name"/>
    		 			  		
    	</class>
      
    </hibernate-mapping>