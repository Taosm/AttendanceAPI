<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	<class name="com.samuel.attendance.model.Attendance" table="attendance" schema="attendanceapi" >
    	
    		<id name="id" >
    			<generator class="increment" />
    		</id>
  		
    		<property name="staffId" />
    		<property name="name" />
    		<property name="firstTime" />
    		<property name="lastTime" />
    		<property name="workTime" />
    		<property name="late" />
    		<property name="earlyLeave" />
    		<property name="absence" />
    		<property name="day" />
    		<property name="month" />
    		<property name="dayOfWeek" />
    		<property name="year" />
      		 			  		
    	</class>
      
    </hibernate-mapping>